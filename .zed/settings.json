{
  "lsp": {
      "tailwindcss-language-server": {
          "settings": {
              "includeLanguages": {
                  "rust": "html",
                  "*.rs": "html"
              },
              "experimental": {
                "classRegex": [
                  "class\\s*:\\s*\"([^\"]+)\"",
                  "class\\s*:\\s*r#\"([^\"]+)\"",
                  "class\\s*:\\s*format!\\([^,]+,\\s*\"([^\"]+)\"",
                  "if\\s*.*?\\{\\s*\"([^\"]+)\"",
                  "}\\s*else\\s*\\{\\s*\"([^\"]+)\"\\s*\\}"
                ]
              }
          }
      }
  },
  "languages": {
    "Rust": {
      "language_servers": ["tailwindcss-language-server", "..."]
    }
  }
}
